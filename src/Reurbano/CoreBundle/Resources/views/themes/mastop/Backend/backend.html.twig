<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
                
<link href="{% block favicon asset('/favicon.ico') %}" rel="SHORTCUT ICON" />

<title>{% block title "Administração" %} - {{ mastop_param('system.site.name') }}</title>


<!-- Create an icon and splash screen for iPhone and iPad -->
<link rel="apple-touch-icon" href="{{ asset('themes/mastop/admin/images/iOS_icon.png') }}" />
<link rel="apple-touch-startup-image" href="{{ asset('themes/mastop/admin/images/iOS_startup.png') }}" />
    

{% stylesheets 'mastop/Frontend/silk/silk-sprite.css' filter='yui_css' output='themes/mastop/silk/silk-sprite.css' %}
