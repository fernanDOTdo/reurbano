{% block stylesheets null%}
{% block javascriptsHead null%}
</head>
<body>
{# Main #}
<div id="wrapper">
{# Mensagens do Sistema #}
{% if app.session.hasFlash('error') %}
<div class="alert alert_red">
    <img height="24" width="24" src="{{ asset('themes/mastop/admin/images/icons/large/white/acces_denied_sign.png') }}" />
    <strong>Erro: </strong> {{ app.session.flash('error')|raw }}<span class="close disabled ui-silk ui-silk-cancel"></span>
</div>
{% endif %}
{% if app.session.hasFlash('ok') %}
   
<div class="alert alert_green">
    <img height="24" width="24" src="{{ asset('themes/mastop/admin/images/icons/large/white/light_bulb.png') }}" />
    {{ app.session.flash('ok')|raw }}<span class="close disabled ui-silk ui-silk-cancel"></span>
</div>
{% endif %}
{% if app.session.hasFlash('notice') %}
<div class="alert alert_grey">
    <img height="24" width="24" src="{{ asset('themes/mastop/admin/images/icons/large/grey/info___about.png') }}" />
    <strong>Aviso: </strong> {{ app.session.flash('notice')|raw }}<span class="close disabled ui-silk ui-silk-cancel"></span>
</div>
{% endif %}
{# /Mensagens do Sistema #}
{# Topbar #}
<div id="topbar" class="clearfix container_12">
	
	<a href="{{ url('admin_system_home_index') }}" class="logo grid_4"><span>{{ mastop_param('system.site.name') }}</span></a>
	<div id="search_bar" class="grid_5">
	<form>
		<input class="indent round_all" type="text" name="busca" value="" />
		<div class="place_search">
			<button class="button_colour round_all">
                                <span></span>
				<img src="{{ asset('themes/mastop/admin/images/icons/small/white/magnifying_glass.png') }}" width="24" height="24" alt="Magnifying Glass">
				<span>Busca</span>
			</button>
		</div>
	</form>
        </div>
	<div class="user_box round_all grid_3">
		<img src="{{ gravatar(app.user.email|default(null), 55) }}" width="55" alt="Gravatar" />
		<h2>Administrador</h2>
		<h3><a class="text_shadow" href="#">{{ app.user.name|default(app.user.username) }}</a></h3>
		<ul>
			<li><a href="{{url('_home')}}" target="_blank">site</a><span class="divider">|</span></li>
			<li><a href="{{url('_logout')}}">sair</a></li>
		</ul>
	</div><!-- #user_box -->	
</div><!-- #topbar -->
{# /Topbar #}

{# MainContainer #}
<div id="main_container" class="main_container container_12 clearfix">

{# Navigation #}
<div id="nav_top" class="clearfix round_top">
        {{mastop_menu('system-admin', null, current|default(null), 1, 'admin', {'class':'clearfix round_all'})}}
</div><!-- #nav_top -->
{# /Navigation #}

{# Breadcrumb #}
{{breadcrumbs(title|default(null), current|default(app.request.attributes.get('_route')), breadcrumbs|default(false), {'id': 'breadcrumb', 'class': 'grad_colour'})}}
{# /Breadcrumb #}
{# Conteúdo #}
{% block content %}
{% endblock content %}
{# /Conteúdo #}

</div>
{# /MainContainer #}
{# Footer #}
<div id="ft" class="container_12">{% block footer %}<span id="copyright">© 2011 <a href="http://www.mastop.com.br" target="_blank">Mastop Internet Development</a> - Alguns Direitos Reservados</span>{% endblock%}</div>
{# /Footer #}
</div>
{#/Main #}
    
{# Javascripts #}
{% block javascripts %}{% endblock %}
{#/Javascripts #}
<div id="loading_overlay">
    <div class="loading_message round_bottom">Aguarde ...</div>
</div>
    
<script type="text/javascript" src="{{ asset('themes/mastop/admin/js/tipsy/jquery.tipsy.js') }}"></script>
<script type="text/javascript">
    // Tipsy Top Config (more info found at http://onehackoranother.com/projects/jquery/tipsy/)
		$('[title]').not("div").not("label").tipsy({
			fade: true,     // fade tooltips in/out?
			fallback: '',    // fallback text to use when no tooltip text
			gravity: 's',    // gravity
			opacity: 1,    // opacity of tooltip
			title: 'title',  // attribute/callback containing tooltip text
			trigger: 'hover' // how tooltip is triggered - hover | focus | manual    	
		});
	// Tipsy Side Config
		$('input[title]').tipsy({
			trigger: 'focus',  
			offset:'5',
			gravity: 'w'
		});
</script>
</body>
</html>