{% set url = url('_home') ~ 'themes/reurbano/mail' %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>{% block title title|default(mastop_param('system.site.name')) %}</title>
<style>
a {
  color: #2072A5;
  text-decoration: none;
  font-weight: 700;
}
a:hover {
  color: #D87D08;
}
b {color: #666;}
body {
  font-family: Arial, Verdana;
  color: #666;
}
</style>
</head>
<body bgcolor="#e5e5e5">
<center>
<table style="margin:0px auto auto auto">
<tbody>
    {# Novo #}
    <tr>
        <td>
            <table width="658" border="0" cellspacing="0" cellpadding="0" align="center">
                <tr>
                    <td align="center" height="110" valign="middle">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td width="48%">
                                    <a href="{{url('_home')}}" target="_new" title="{{mastop_param('system.site.name')}} - {{mastop_param('system.site.slogan')}}">
                                        <img src="{{url~'/images/logo_reurbano.png'}}" alt="{{mastop_param('system.site.name')}} - {{mastop_param('system.site.slogan')}}" width="310" height="90" />
                                    </a>
                                </td>
                                <td width="52%" valign="bottom">
                                    <div style="font-family: Verdana, Geneva, sans-serif; font-size:24px; font-weight:bold; text-align:right; color:#7b9d24; padding-top:75px; padding-right:15px;">
                                        {{title|default(mastop_param('system.site.slogan'))}}
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td height="25" background="{{url~'/images/bg_top.jpg'}}"></td>
                </tr>
                <tr>
                    <td align="center" valign="top" background="{{url~'/images/bg_middle.jpg'}}">
                        <div style="font-family: Verdana, Geneva, sans-serif;font-size:12px; text-align:left; color:#666; line-height:19px; margin-left:15px; margin-right:15px;margin-bottom:15px;padding-left:10px;padding-right:10px;">
                            {#Conteúdo#}
                            {% block content null %}
                            {#/Conteúdo#}
                        </div>
                        <table width="630" border="0" cellspacing="0" cellpadding="0" align="center" style="padding-left:10px; padding-right:8px; padding-top:12px;">
                            <tr>                                
                                <td align="center" valign="top" background="{{url~'/images/bg_box.jpg'}}" style="width:199px" height="205" >
                                    <div style="font-family: Verdana, Geneva, sans-serif;font-size:14px; font-weight:bold; line-height:14px;color:#7b9d24; text-align:center; padding-top:12px;padding-bottom:10px;">
                                        use e abuse<br/> do nosso ranking 
                                    </div>
                                    <a href="{{url('_home')}}" target="_new">
                                        <img src="{{url~'/images/icon4.jpg'}}" alt="use e abuse do nosso ranking" width="150" height="80" />
                                    </a>
                                    <div style="font-family:'Lucida Sans Unicode', 'Lucida Grande', sans-serif; font-size:10px; line-height:12px;color:#666;margin-top:8px;padding-left:8px;padding-right:12px;">
                                        Destacamos as ofertas que fazem<br/> 
                                        mais sucesso, não aquelas <br/>
                                        pagam mais pelo espaço.<br/>

                                        Teste o nosso ranking!
                                    </div>
                                </td>
                                <td align="center" valign="top" background="{{url~'/images/bg_box.jpg'}}" style="width:199px" height="205" >
                                    <div style=" font-family: Verdana, Geneva, sans-serif; font-size:14px;font-weight:bold;line-height:14px;color:#7b9d24;text-align:center;padding-top:12px;padding-bottom:10px;">
                                        venda <br/>
                                        seus cupons
                                    </div>
                                    <a href="{{url('_home')}}" target="_new">
                                        <img src="{{url~'/images/icon5.jpg'}}" alt="venda seus cupons" width="150" height="80" />
                                    </a>
                                    <div style="font-family:'Lucida Sans Unicode', 'Lucida Grande', sans-serif;font-size:10px;line-height:12px;color:#666;margin-top:8px;padding-left:8px;padding-right:12px;">
                                        Não perca mais dinheiro, aqui você pode vender seu cupom. 
                                        Aliás, ganhe dinheiro revendendo uma boa oferta que você encontrou.
                                    </div>
                                </td>
                                <td align="center" valign="top" background="{{url~'/images/bg_box.jpg'}}" style="width:199px" height="205" >
                                    <div style="font-family: Verdana, Geneva, sans-serif;font-size:14px;font-weight:bold;line-height:14px;color:#7b9d24;text-align:center;padding-top:12px;padding-bottom:10px;">
                                        use os cupons <br/>
                                        na hora
                                    </div>
                                    <a href="{{url('_home')}}"target="_new">
                                        <img src="{{url~'/images/icon5.jpg'}}" alt="use os cupons na hora" width="150" height="80" />
                                    </a>
                                    <div style="font-family:'Lucida Sans Unicode', 'Lucida Grande', sans-serif;font-size:10px;line-height:12px;color:#666;margin-top:8px;padding-left:8px;padding-right:12px;">
                                        Nada de ficar esperando chegar<br/>
                                        seu cupom e a sua vez. No Reurbano você escolhe o que quer e já pode usar na hora, sem enrolação.
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <div style="font-family: Verdana, Geneva, sans-serif;font-size:26px;font-weight:bold;color:#666;margin-left:15px;margin-right:15px;padding-top:10px;padding-bottom:20px;padding-left:10px;padding-right:10px;">
                            siga o reurbano<br />
                            <a href="http://twitter.com/reurbanobrasil" target="_new">
                                <img src="{{url~'/images/twitter.jpg'}}" alt="twitter" width="45" height="45" border="0" />
                            </a>
                            <a href="http://www.facebook.com/recompracoletiva" target="_new">
                                <img src="{{url~'/images/facebook.jpg'}}" alt="facebook" width="45" height="45" border="0" />
                            </a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td height="40" align="center" background="{{url~'/images/bg_bottom.jpg'}}">
                        <span style="width:630px; font-family: Verdana, Geneva, sans-serif; font-size:10px; color:#fff; padding-left:9px; padding-right:10px;">
                            Você recebeu esse e-mail pois se cadastrou no Reurbano. Você pode cancelar a hora que quiser, aqui.
                        </span>
                    </td>
                </tr>
                <tr>
                    <td height="30" align="center">
                        <span style="font-family: 'Lucida Sans Unicode', 'Lucida Grande', sans-serif; font-size: 8px; color: #666">REURBANO SERVIÇOS DIGITAIS LTDA</span>
                    </td>
                </tr>
            </table> 
        </td>
    </tr>
    {# /Novo #}
    {# Velho
    <tr>
        <td width="300">
                <a href="{{url('_home')}}" name="header_logo" title="{{mastop_param('system.site.name')}} - {{mastop_param('system.site.slogan')}}"><img src="{{url~'/images/logo.png'}}" alt="{{mastop_param('system.site.name')}}" style="border:0px;"/></a></td>
        <td width="360">
                <h1 style="color:#7a9e24;font-size:18pt;padding-top:40px; margin: 0 0 30px 10px; font-family: Arial, Verdana">
                        {{title|default(mastop_param('system.site.slogan'))}}</h1>
        </td>
    </tr>
    <tr>
        <td colspan="2" style="background-color:#7A9D24">
            <table width="100%" cellspacing="0" cellpadding="0">
                    <tbody>
                            <tr>
                                <td colspan="3" style="height:10px; font-size:2pt;">&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="width:10px; font-size:2pt;">&nbsp;</td>
                                <td style="background-color:White; padding: 15px; color: #666">
                                        {#Conteúdo
                                        {% block content null %}
                                        {#/Conteúdo
                                </td>
                                <td style="width:10px; font-size:2pt;">&nbsp;</td>
                            </tr>
                            <tr>
                                <td colspan="3" style="height:10px; font-size:2pt;">&nbsp;</td>
                            </tr>
                    </tbody>
            </table>
        </td>
    </tr>
    {%if dealSpecial is defined %}
    <tr>
        <td colspan="2" style="background-color:#d87d08">
            <table width="100%" cellspacing="0" cellpadding="0">
                    <tbody>
                            <tr>
                                    <td colspan="4" style="height:10px; font-size:2pt;">&nbsp;
                                            </td>
                            </tr>
                            <tr>
                                    <td style="width:10px; font-size:2pt;">&nbsp;</td>
                                    <td style="background-color:White; padding: 15px;">
                                            OFERTA 1
                                    </td>
                                    <td style="background-color:White; padding: 15px;">
                                            OFERTA 2
                                    </td>
                                    <td style="width:10px; font-size:2pt;">&nbsp;</td>
                            </tr>
                            <tr>
                                    <td colspan="4" style="height:10px; font-size:2pt;">&nbsp;</td>
                            </tr>
                    </tbody>
            </table>
        </td>
    </tr>
    {% endif %}
    <tr>
        <td colspan="2" style="background-color:#15567e">
            <table width="100%" cellspacing="0" cellpadding="0">
                    <tbody>
                            <tr>
                                    <td colspan="3" style="height:10px; font-size:2pt;">&nbsp;</td>
                            </tr>
                            <tr>
                                    <td style="width:10px; font-size:2pt;">&nbsp;</td>
                                    <td style="background-color:White; padding: 15px; text-align: center;">
                                            {% include 'ReurbanoDealBundle:Widget\\Mail:category.html.twig' with {'categories': reurbano_get_categories() }%}
                                            <br />
                                            <br />
                                            <b style="color:#666;">Siga o {{mastop_param('system.site.name')}}</b><br /> <a target="_blank" href="http://www.facebook.com/recompracoletiva"><img src="{{url~'/images/facebook.png'}}" alt="Facebook" height="64" border="0" width="64"></a>&nbsp;&nbsp;
                                            <a target="_blank" href="http://twitter.com/ReurbanoBrasil"><img src="{{url~'/images/twitter.png'}}" alt="Twitter" height="64" border="0" width="64"></a>&nbsp;&nbsp;
                                    </td>
                                    <td style="width:10px; font-size:2pt;">&nbsp;</td>
                            </tr>
                            <tr>
                                    <td colspan="3" style="height:10px; font-size:2pt;">&nbsp;</td>
                            </tr>
                    </tbody>
            </table>
        </td>
    </tr>
    {# /Velho #}
</tbody>
</table>
<br />
<table cellpadding="0" style="border-top:1px solid #e4e4e4; text-align:center; font-family: Arial, Verdana; font-size:12px;" cellspacing="0" width="600">
<tr>
	<td height="2" style="border-bottom:1px solid #e4e4e4;">
	<div style="line-height: 0px; font-size: 1px; position: absolute;">&nbsp;</div>
	</td>
</tr>
<tr>
	<td style="font-family: Arial, Verdana; font-size:12px;">
	<br />
        <span style="color:#666666;padding-top:10px; margin: 0 0 30px 10px; font-family: Arial, Verdana">
                        Equipe {{mastop_param('system.site.name')}}</span>
	<br />
	</td>
</tr>
</table>

</center>
</body>
</html>