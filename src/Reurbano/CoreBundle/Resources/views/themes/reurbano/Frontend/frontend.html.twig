        <div class="grid_12" id="breadcrumbs">
            <div itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
                <a href="{{path('_home')}}" itemprop="url">
                <span itemprop="title">Home</span>
                </a> › 
            </div>  
        {%for item in breadcrumbs%}
            <div itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
                {%if item.url is defined%}<a href="{{item.url}}" itemprop="url">{%endif%}
                <span itemprop="title">{{item.title}}</span>
                {%if item.url is defined%}</a> {%endif%}{%if loop.last == false%} › {%endif%}
            </div>
        {%endfor%}
        </div>
        {%endif%}
        
        {%if app.request.attributes.get('_route') == '_home' or app.request.attributes.get('_route') == 'core_city_index' %}
