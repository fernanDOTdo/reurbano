{# Mensagens do Sistema #}
{% if app.session.hasFlash('error') %}
<div class="alert alert_error">
    <div class="container_12">
        <div class="grid_10">
            <strong>Erro: </strong> {{ app.session.flash('error')|trans|raw }}
        </div>
        <div class="grid_2">
            <a class="closeAlert" href="#">Fechar</a>
        </div>
    </div>
</div>
