            </div>
            {% endblock search %}
        </div>
        {% block menuCity %}
        {# Lista de cidades #}
	        {% set cities = reurbano_get_cities() %}
	        <div id="listCities">
	            <a href="#" id="closeCities" title="Fechar" class="floatR button primary small orange">X</a>
	            <h2>Principais cidades</h2>
	            <ul class="highCities clearfix">
	                {% for city in cities['special'] %}
	                  <li><a title="Ofertas de {{city.getName()}}"{%if city.getSlug() == app.session.get('reurbano.user.city') %} class="selected"{%else%} href="{{ path('core_city_index', {'slug':city.getSlug()}) }}"{%endif%}>{{city.getName()}}</a></li>
	                {% endfor %}
	            </ul>
	            <br>
	            <h2>Outras cidades</h2>
	            <ul>
	                {% for city in cities['other'] %}
	                  <li><a title="Ofertas de {{city.getName()}}"{%if city.getSlug() == app.session.get('reurbano.user.city') %} class="selected"{%else%} href="{{ path('core_city_index', {'slug':city.getSlug()}) }}"{%endif%}>{{city.getName()}}</a></li>
	                {% endfor %}
	            </ul>
	   		</div>
        {# /Lista de cidades #}
        {% endblock menuCity %}
        
        {# Lista as categorias #}
        {% block menuMain %}
	        <div class="grid_10" id="menuMain">
	            {%if cat is defined %}
	            {% render 'ReurbanoDealBundle:Widget\\Category:menu' with {'selected': cat.getSlug }%}
	            {%else%}
	            {% render 'ReurbanoDealBundle:Widget\\Category:menu' with {'selected': app.request.get('slug') }%}
	            {%endif%}
	        </div>
        {% endblock menuMain %}
		{# /Lista as categorias #}
