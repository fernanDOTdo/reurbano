<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="reurbano.dm" alias="doctrine.odm.mongodb.document_manager" />

        <service id="reurbano.repository.city" class="Reurbano\CoreBundle\Document\CityRepository" factory-service="reurbano.dm" factory-method="getRepository">
            <argument type="string">Reurbano\CoreBundle\Document\City</argument>
        </service>
    </services>

</container>
