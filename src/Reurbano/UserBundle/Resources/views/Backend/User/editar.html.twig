{% extends '::backend.html.twig' %}
{% block content %}
<h1>{% trans with {'%name%' : usuario.getName() } %}Edição do usuário %name%{% endtrans %}</h1>
        <form action="{{ path('admin_user_user_salvar') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
{% if id is defined %}
            <input type='hidden' name='Userform[id]' value='{{usuario.getId()}}'>
{% endif%}
            <input type="submit" name='salvar' value='{{ "Salvar"|trans }}' />
            <input type="button" name='voltar' value='{{ "Voltar"|trans }}' onclick="history.go(-1)" />
        </form>
{% endblock content %}