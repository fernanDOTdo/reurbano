{% extends '::frontend.html.twig' %}
{% block content %}
{% if error %}
<div>{{ error.message }}</div>
{% endif %}

<form action="{{ path("login_check") }}" method="post">
    <label for="username">{{ "Email:"|trans }}:</label>
    <input type="text" id="umail" name="_umail" value="{{ last_username }}" />
    <br />
    <label for="password">{{ "Senha:"|trans }}</label>
    <input type="password" id="password" name="_password" />
    <br />
    <input type="checkbox" id="remember_me" name="_remember_me" checked />
    <label for="remember_me">{{ "Lembrar meu login"|trans }}</label>
    <br />
    <input type="submit" name="login" value="Login!"/>
</form>
<a href="{{ path('_user_forget') }}" title="{{ "Troque sua senha"|trans }}">{{ "Esqueci minha senha"|trans }}</a>

{% endblock content %}  