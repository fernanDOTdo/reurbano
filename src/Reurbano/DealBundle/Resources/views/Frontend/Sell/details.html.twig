{% extends '::frontend.html.twig' %}

{% block javascripts%}
{% javascripts output='static/system/js/sell.js'
                   '@ReurbanoCoreBundle/Resources/public/js/autocomplete/jquery.autocomplete.pack.js'
                   '@ReurbanoDealBundle/Resources/public/js/Frontend/sell.js'
                   %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock%}
{% block content %}
<div class="content box grid_8">
    <h1>{{"Informe os detalhes de sua oferta"|trans}}</h1>
    <form action="{{ path('deal_sell_save') }}" method="post" id="sellDetails" {{ form_enctype(form) }} >
        <b>Titulo</b><br />
        {{ source.getTitle() }}<br />
        <b>Site</b><br />
        {{ source.getSite.getName }}<br />
        {{ form_row(form.quantity) }}
        {{ form_row(form.price) }}
        <div id="sellVoucher" class="mT10 mB10">
            {{ form_row(form.voucher0) }}
        </div>
        {{ form_rest(form) }}
        <input type="hidden" value="{{ source.getId }}" name="deal[sourceId]"/>
         <button class='button green big push_3' type="submit">{{ "Enviar Oferta"|trans }}</button>
    </form>
</div>
<div class="grid_4">
{% render 'ReurbanoCoreBundle:Widget\\Block:render' with{'area': 'sell'} %}
</div>
{% endblock %}
