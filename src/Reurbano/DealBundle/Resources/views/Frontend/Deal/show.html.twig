{% extends '::frontend.html.twig' %}

{% block stylesheets %}
    <link href="http://code.google.com/apis/maps/documentation/javascript/examples/default.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block javascriptsHead %}
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            var geocoder;
            var map;

            geocoder = new google.maps.Geocoder();    

            geocoder.geocode( { 'address': "{{ oferta.getSource().getBusinessAddress() }}" }, function(results, status) {
                if (status == google.maps.GeocoderStatus.OK) {
                    var myOptions = {
                        zoom: 17,
                        center: results[0].geometry.location,
                        mapTypeId: google.maps.MapTypeId.ROADMAP
                    }
                    map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
                    map.setCenter(results[0].geometry.location);
                    var marker = new google.maps.Marker({
                        map: map, 
                        position: results[0].geometry.location
                    });
                } else {
                    alert("Geocode was not successful for the following reason: " + status);
                }
            });
        });
    </script>
{% endblock %}

{% block title %}Ofertas {{title}}{% endblock %}
{% block content %}
    <div class="container_12">
        <div id="dealInformation" class="grid_9">
            <div class="grid_9">
                <h1 class="dealTitle">
                    {{ oferta.getLabel() }}
                </h1>
            </div>
            <div class="grid_5" style="margin-left: 0px; height: 250px;">
                <div class="dealImage">
                    <!-- Deal Image -->
                    <span>
                        IMAGEM DA OFERTA!
                    </span>
                </div>
            </div>
            <div class="grid_4" style="margin-right: 0px">
                <div class="dealOrder">
                    <div class="dealExpires">
                        <span class="expiresLabel">Cupom válido até:</span> 
                        <span class="expiteDate">{{ oferta.getSource().getExpiresAt()|date("d/m/Y")  }}</span>
                    </div>
                    <div class="dealPrice">
                        <span class="priceNormalLabel">De</span> <span class="priceNormal">R${{ oferta.getSource().getPrice() }}</span> 
                        <span class="priceDescLabel">Por </span> <span class="priceDesc">R${{ oferta.getPrice() }}</span> 
                    </div>
                </div>
            </div>
            <div class="grid_9">
                <div class="dealDetalhe">
                    Detalhes
                </div>
                <div class="dealDescription">
                    {{ oferta.getSource().getDetails() }}
                </div>
            </div>
            <div class="grid_9">
                <div class="dealRegra">
                    Regras
                </div>
                <div class="dealRules">
                    {{ oferta.getSource().getRules() }}
                </div>
            </div>
            <div class="grid_9">
                <div class="dealRegra">
