{%if app.user%}
{% for cat in categories %}
        <a style="color:#15567e; padding:5px; margin: 0 30px 10px 0; font-family: Arial, Helvetica, sans-serif; font-weight: 700; text-decoration: none; font-size: 22pt; " title="Ofertas de {{cat.getName()}} em {{app.session.get('reurbano.user.cityName')}}" href="{{ url('deal_category_index', {'city':app.session.get('reurbano.user.city'), 'slug':cat.getSlug()}) }}">{{cat.getName()}}</a> 
